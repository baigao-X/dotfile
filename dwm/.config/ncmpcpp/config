# sync with mpd
mpd_host = "localhost"                     # mpd 服务地址
mpd_port = "6600"                          # mpd 服务端口

mpd_music_dir = ~/Music                    # 音频文件路径

ncmpcpp_directory = ~/.cache/ncmpcpp       # app临时文件路径
lyrics_directory = ~/.cache/ncmpcpp/lyrics # 歌词路径

# 音乐可视化配置
visualizer_in_stereo = "no"
visualizer_fifo_path = "/tmp/mpd.fifo"
visualizer_output_name = "my_fifo"
visualizer_sync_interval = "10"
visualizer_type = "spectrum" #spectrum/wave/wave_filled/ellipse


# 显示格式:
song_list_format = "{{%a %t}|{%f}}{$R%l}"      #播放列表
current_item_prefix = $b$7                     
current_item_inactive_column_prefix = $b$(white)$r
now_playing_prefix = "$b$3"
now_playing_suffix = "$b$9"
main_window_color = white
playlist_display_mode = "classic"
user_interface = classic
header_visibility = "no"
statusbar_visibility = "no"
titles_visibility = "no"

#进度条
progressbar_look = "▃▃ "
progressbar_elapsed_color = "magenta"


# 杂项配置
autocenter_mode = yes
